@model IEnumerable<ApplicationUser>

<h2>Usuários</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>

                <td>
                    @foreach (var role in ViewBag.UserRoles[user.Id])
                    {
                        string badgeClass = role switch
                        {
                            "Admin" => "bg-danger",
                            "Editor" => "bg-info",
                            "Autor" => "bg-success",
                            _ => "bg-secondary"
                        };

                        <span class="badge @badgeClass me-1">@role</span>
                    }

                </td>

                <td>
                    <a asp-action="EditarCargos"
                       asp-route-id="@user.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Editar cargos
                    </a>

                    <a asp-action="ResetarSenha"
                       asp-route-id="@user.Id"
                       class="btn btn-sm btn-outline-danger ms-1">
                        Resetar senha
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
