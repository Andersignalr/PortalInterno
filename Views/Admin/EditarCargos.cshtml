@model EditarCargosViewModel

<h2>Editar Cargos</h2>

<form asp-action="EditarCargos" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label>Email</label>
        <input class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="mb-3">
        <label>Cargos</label>

        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="RolesSelecionadas"
                       value="@role"
                       @(Model.RolesSelecionadas.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">
        Salvar
    </button>

    <a asp-action="Usuarios" class="btn btn-secondary">
        Voltar
    </a>
</form>
