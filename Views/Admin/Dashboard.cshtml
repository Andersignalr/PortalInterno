@model AdminDashboardViewModel

<h2>Dashboard Administrativo</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-bg-primary">
            <div class="card-body">
                <h5>Usuários</h5>
                <h3>@Model.TotalUsuarios</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-success">
            <div class="card-body">
                <h5>Notícias</h5>
                <h3>@Model.TotalNoticias</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-info">
            <div class="card-body">
                <h5>Publicadas</h5>
                <h3>@Model.NoticiasPublicadas</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-secondary">
            <div class="card-body">
                <h5>Rascunhos</h5>
                <h3>@Model.NoticiasRascunho</h3>
            </div>
        </div>
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-arrow-up-circle-fill text-success fs-2 me-2"></i>

                    <div>
                        @if (Model.NoticiasUltimos7Dias > 0)
                        {
                            <h4 class="text-success mb-0">+@Model.NoticiasUltimos7Dias</h4>
                        }
                        else
                        {
                            <h4 class="text-muted mb-0">0</h4>
                        }

                        <small class="text-muted">
                            notícias nos últimos 7 dias
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center">

                    <!-- LADO ESQUERDO: SETA + DIFERENÇA -->
                    <div class="d-flex align-items-center">
                        @if (Model.DiferencaNoticias > 0)
                        {
                            <i class="bi bi-arrow-up-circle-fill text-success fs-2 me-2"></i>
                        }
                        else if (Model.DiferencaNoticias < 0)
                        {
                            <i class="bi bi-arrow-down-circle-fill text-danger fs-2 me-2"></i>
                        }
                        else
                        {
                            <i class="bi bi-dash-circle-fill text-secondary fs-2 me-2"></i>
                        }

                        <div>
                            <h4 class="mb-0
                            @(Model.DiferencaNoticias > 0 ? "text-success" :
                                                                                              Model.DiferencaNoticias < 0 ? "text-danger" : "text-muted")">
                                @(Model.DiferencaNoticias > 0 ? "+" : "")@Model.DiferencaNoticias
                            </h4>
                            <small class="text-muted">vs 7 dias</small>
                        </div>
                    </div>

                    <!-- DIVISÓRIA -->
                    <div class="vr mx-3"></div>

                    <!-- LADO DIREITO: DETALHES -->
                    <div class="text-end">
                        <div>
                            <b>@Model.NoticiasUltimos7Dias</b>
                            <small class="text-muted">nos últimos 7 dias</small>
                        </div>

                        <div class="mt-1">
                            <b>@Model.Noticias7DiasAnteriores</b>
                            <small class="text-muted">na semana anterior</small>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


</div>

<div class="row mt-4">
    <div class="col-md-6">
        @await Html.PartialAsync("~/Views/Tarefas/Recentes.cshtml", Model.TarefasRecentes)
    </div>
    <div class="md-4">.</div>
</div>


<h4>Últimas Notícias</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Status</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model.UltimasNoticias)
        {
            <tr>
                <td>@n.Titulo</td>
                <td>@n.Autor?.UserName</td>
                <td>
                    <span class="badge @(n.Publicada ? "bg-success" : "bg-secondary")">
                        @(n.Publicada ? "Publicada" : "Rascunho")
                    </span>
                </td>
                <td>@n.DataPublicacao.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>


<h4 class="mt-4">Projetos em andamento</h4>

<div class="row">
    @foreach (var p in Model.ProjetosEmAndamento)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">

                    <h5>@p.Titulo</h5>

                    <div class="progress mb-2">
                        <div class="progress-bar"
                             role="progressbar"
                             style="width:@p.Progresso%">
                            @p.Progresso%
                        </div>
                    </div>

                    <small class="text-muted">
                        @p.TarefasConcluidas / @p.TotalTarefas tarefas concluídas
                    </small>

                    <hr />

                    <div>
                        <strong>Membros</strong><br />
                        @foreach (var m in p.Membros)
                        {
                            <span class="badge bg-secondary me-1">@m</span>
                        }
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-controller="Noticias" asp-action="Gerenciar" class="btn btn-primary">
        Gerenciar Notícias
    </a>

    <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-secondary">
        Gerenciar Usuários
    </a>
</div>