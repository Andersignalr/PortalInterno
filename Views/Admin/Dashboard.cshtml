@model AdminDashboardViewModel

<h2>Dashboard Administrativo</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-bg-primary">
            <div class="card-body">
                <h5>Usuários</h5>
                <h3>@Model.TotalUsuarios</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-success">
            <div class="card-body">
                <h5>Notícias</h5>
                <h3>@Model.TotalNoticias</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-info">
            <div class="card-body">
                <h5>Publicadas</h5>
                <h3>@Model.NoticiasPublicadas</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-secondary">
            <div class="card-body">
                <h5>Rascunhos</h5>
                <h3>@Model.NoticiasRascunho</h3>
            </div>
        </div>
    </div>
</div>

<h4>Últimas Notícias</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Status</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model.UltimasNoticias)
        {
            <tr>
                <td>@n.Titulo</td>
                <td>@n.Autor?.UserName</td>
                <td>
                    <span class="badge @(n.Publicada ? "bg-success" : "bg-secondary")">
                        @(n.Publicada ? "Publicada" : "Rascunho")
                    </span>
                </td>
                <td>@n.DataPublicacao.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Noticias" asp-action="Gerenciar" class="btn btn-primary">
        Gerenciar Notícias
    </a>

    <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-secondary">
        Gerenciar Usuários
    </a>
</div>
