<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortalInterno</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortalInterno.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                Portal Interno
            </a>

            <!-- Botão mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPrincipal">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarPrincipal">

                <!-- Menu esquerdo -->
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            Início
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Noticias" asp-action="Index">
                            Notícias
                        </a>
                    </li>

                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Noticias" asp-action="Gerenciar">
                                Gerenciar Notícias
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Usuarios">
                                Administração
                            </a>
                        </li>
                    }
                </ul>

                <!-- Menu direito (login / conta) -->
                <ul class="navbar-nav ms-auto">

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                                Minha Conta
                            </a>
                        </li>

                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">
                                    Sair
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                Entrar
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - PortalInterno
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
