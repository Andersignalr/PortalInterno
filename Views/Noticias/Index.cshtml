@model IEnumerable<Noticia>

<h2>Notícias</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <a asp-action="Criar" class="btn btn-success mb-3">
        Nova Notícia
    </a>
}

@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h4>@item.Titulo</h4>
            <p class="text-muted">
                @item.DataPublicacao.ToLocalTime() • @item.Autor?.UserName
            </p>

            <p>@item.Conteudo.Substring(0, Math.Min(200, item.Conteudo.Length))...</p>

            <a asp-action="Detalhes" asp-route-id="@item.Id">Ler mais</a>

            @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
            {
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-2">
                    Editar
                </a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-2">
                    Excluir
                </a>
            }
        </div>
    </div>
}
