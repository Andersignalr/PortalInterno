@model IEnumerable<Noticia>

<h2>Gerenciar Notícias</h2>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Autor?.UserName</td>
                <td>
                    @(item.Publicada ? "Publicada" : "Rascunho")
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <text> | </text>
                        <a asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
